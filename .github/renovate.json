{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":dependencyDashboard",
    "schedule:weekly"
  ],
  "baseBranches": ["main"],
  "labels": ["dependencies"],
  "schedule": ["before 3am on Monday"],
  "timezone": "UTC",
  "automerge": false,
  "automergeType": "pr",
  "platformAutomerge": true,
  "branchPrefix": "fix/",
  "vulnerabilityAlerts": {
    "enabled": true,
    "labels": ["security"],
    "automerge": true
  },
  "poetry": {
    "enabled": true
  },
  "packageRules": [
    {
      "description": "Auto-merge security updates",
      "matchDatasources": ["npm", "pypi"],
      "matchUpdateTypes": ["patch", "minor"],
      "matchDepTypes": ["devDependencies", "dependencies"],
      "matchPackagePatterns": ["*"],
      "matchManagers": ["poetry", "npm", "pip_requirements", "pip_setup"],
      "automerge": true,
      "platformAutomerge": true,
      "vulnerabilityAlerts": {
        "enabled": true,
        "automerge": true
      },
      "labels": ["security", "automerge"],
      "branchPrefix": "fix/security-"
    },
    {
      "description": "Auto-merge patch and minor updates",
      "matchUpdateTypes": ["patch", "minor"],
      "automerge": true,
      "platformAutomerge": true,
      "branchPrefix": "fix/"
    },
    {
      "description": "Major updates need review",
      "matchUpdateTypes": ["major"],
      "automerge": false,
      "branchPrefix": "fix/major-"
    },
    {
      "description": "Group by Poetry dependency groups",
      "matchManagers": ["poetry"],
      "groupByDepType": true
    },
    {
      "description": "Security vulnerabilities always automerge",
      "matchVulnerabilityAlerts": true,
      "automerge": true,
      "platformAutomerge": true,
      "branchPrefix": "fix/security-",
      "labels": ["security", "automerge"],
      "prPriority": 10
    }
  ],
  "prConcurrentLimit": 5,
  "prCreation": "immediate",
  "rebaseWhen": "auto",
  "rangeStrategy": "auto",
  "semanticCommits": "enabled",
  "semanticCommitType": "fix",
  "semanticCommitScope": "deps"
}
